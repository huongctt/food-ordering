<h1 class="text-center mt-4"><%= t('.title') %></h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class ="shadow p-3 mb-3 bg-info rounded text-light" >
        <%= form_for(:order_address, url: add_address_path, method: :post, remote: true) do |f| %>
          <h4><%= t('.newaddress') %></h4>
          <div class="form-group row">
            <%= f.label :address, t(".address"), class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :address, class: "form-control shadow rounded" %>
            </div>
          </div>
          <%= f.label :is_using, class: "checkbox inline ml-4" do %>
            <%= f.check_box :is_using, {:checked=>true}  %>
            <span> <%= t('.address_using') %> </span>
          <% end %>
          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>

        <%= form_for @order do |f| %>
          <h4><%= t('.chooseaddress') %></h4>
          <div id="addresses">
            <%= render partial: "order_address", collection: @order_addresses, as: "order_address" %>
          </div>
          <%= f.hidden_field :status, value: 'created' %>
          <%= f.hidden_field :order_time, value: Time.now %>
          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
