<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-2">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <div class="h3"> <%= link_to @food.name, food_path(@food) %></div>
            <div class="mt-2"> <%= link_to @food.category.name, category_path(@food.category), class: "badge badge-pill badge-info mr-1" %> </div>
          </div>
          <div class="card-body">
            <p class="card-text"><%= t '.description'%>: <%= @food.description %></p>
            <p class="card-text"><%= t '.price'%>: <%= @food.price %></p>
            <% @food.images.each do |img|%>
              <img src= "<%= img.image.url %>" width="600px" class="mt-4"/>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-2">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <div class="h3"> <%= t '.review' %> </div>
        </div>
      </div>
    </div>
  </div>
  <% @reviews.each do |review| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-2">
        <div class="card shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <div class="h5"><%= review.user.email %></div>
          </div>
          <div class="card-body">
            <p class="card-text"><%= t '.rate' %> : <%= review.rate %></p>
            <p class="card-text"><%= t '.comment' %> : <%= review.comment %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
